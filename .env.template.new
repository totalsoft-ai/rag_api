# RAG API Environment Configuration
# This is the updated template after DATABASE_URL migration
# Copy this content to .env.example or .env

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string (required for pgvector)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://myuser:mypassword@localhost:5432/mydatabase

# PostgreSQL schema name for tables (optional, defaults to "public")
# Note: Schema names are automatically converted to lowercase
DB_SCHEMA=public

# ============================================
# Vector Store Configuration
# ============================================
VECTOR_DB_TYPE=pgvector
COLLECTION_NAME=testcollection

# MongoDB Atlas Configuration (if using atlas-mongo instead of pgvector)
# ATLAS_MONGO_DB_URI=mongodb://127.0.0.1:27018/LibreChat
# ATLAS_SEARCH_INDEX=vector_index

# ============================================
# Embeddings Provider Configuration
# ============================================
# Options: openai, azure, huggingface, huggingfacetei, ollama, bedrock, google_genai, vertexai
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_MODEL=text-embedding-3-small
# EMBEDDINGS_CHUNK_SIZE=200
# RAG_CHECK_EMBEDDING_CTX_LENGTH=True

# ============================================
# OpenAI API Configuration
# ============================================
RAG_OPENAI_API_KEY=your-openai-api-key-here
# RAG_OPENAI_BASEURL=https://api.openai.com/v1
# RAG_OPENAI_PROXY=

# ============================================
# Azure OpenAI Configuration
# ============================================
# RAG_AZURE_OPENAI_API_KEY=your-azure-api-key
# RAG_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# RAG_AZURE_OPENAI_API_VERSION=2023-05-15

# ============================================
# HuggingFace Configuration
# ============================================
# HF_TOKEN=your-huggingface-token

# ============================================
# Ollama Configuration
# ============================================
# OLLAMA_BASE_URL=http://ollama:11434

# ============================================
# AWS Bedrock Configuration
# ============================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1
# AWS_SESSION_TOKEN=

# ============================================
# Google AI Configuration
# ============================================
# RAG_GOOGLE_API_KEY=your-google-api-key
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ============================================
# Text Chunking Configuration
# ============================================
# Maximum characters per chunk
CHUNK_SIZE=1500
# Overlapping characters between chunks
CHUNK_OVERLAP=100
# Custom separators for text splitting (comma-separated, use \n for newlines)
# TEXT_SEPARATORS="\n\n,\n,. ,! ,? , ,"

# ============================================
# Server Configuration
# ============================================
RAG_HOST=0.0.0.0
RAG_PORT=8000
RAG_UPLOAD_DIR=./uploads/

# ============================================
# PDF Processing Configuration
# ============================================
PDF_EXTRACT_IMAGES=False

# ============================================
# Security Configuration
# ============================================
# JWT_SECRET=your-jwt-secret-key
# USE_SECURITY_MIDDLEWARE=False

# ============================================
# LibreChat Integration
# ============================================
# LIBRECHAT_WEBHOOK_URL=http://librechat:3080

# ============================================
# Logging Configuration
# ============================================
# DEBUG_RAG_API=False
# DEBUG_PGVECTOR_QUERIES=False
# CONSOLE_JSON=False

# ============================================
# Thread Pool Configuration
# ============================================
# RAG_THREAD_POOL_SIZE=8
